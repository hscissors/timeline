<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soundsofpolaris.timeline"
    android:versionCode="4"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.Timeline" 
        android:name=".TimelineApplication" android:debuggable="false">
        <activity
            android:name="com.soundsofpolaris.timeline.activities.GroupListActivity"
            android:label="@string/app_name" 
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soundsofpolaris.timeline.activities.GroupAddEditActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.soundsofpolaris.timeline.activities.EventListActivity"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="com.soundsofpolaris.timeline.activities.EventAddEditActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>