<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Timeline" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/app_bg</item>

        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="actionBarStyle">@style/action_bar</item>
        
    	<item name="android:actionMenuTextColor">@color/primary_accent</item>
        <item name="actionMenuTextColor">@color/primary_accent</item>
        
        <item name="android:actionBarItemBackground">@drawable/ab_item_bg</item>
        <item name="actionBarItemBackground">@drawable/ab_item_bg</item>
        
        <item name="android:actionModeBackground">@drawable/ab_primary_bg</item>
        <item name="actionModeBackground">@drawable/ab_primary_bg</item>
        
		<item name="android:actionModeCloseButtonStyle">@style/action_mode_close_btn</item>
