        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        
        <item name="background">@drawable/ab_primary_bg</item>
        <item name="android:background">@drawable/ab_primary_bg</item>
	</style>
    
    <style name="action_mode_close_btn" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
    	<item name="android:visibility">gone</item>
	</style>
    
    <style name="button">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:padding">5dp</item>
    </style>
    
   <style name="button_cropped_top">
